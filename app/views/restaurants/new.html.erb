<div class="container p-5 m-5 bg-white rounded" >
  <h1>Add a new Restaurant</h1>

  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name%>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection:['japanese', 'chinese', 'italian', 'french', 'belgian'] %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>
